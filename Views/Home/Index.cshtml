@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card</title>
    <meta name="viewport" content="width=device-width, user-scalable=no initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
</head>
<body class="index">
    <div class="TotalConteiner">
    @for (int i = 0; i < ViewBag.ListaPartido.Count; i++)
    {
     <div class = "conteiner"> 
        <div class="card">
        <img src="~/img/@ViewBag.ListaPartido[i].Logo">
        <p>@ViewBag.ListaPartido[i].Nombre</p>
        <a href='@Url.Action("VerDetallePartido", new {IdPartido = @ViewBag.ListaPartido[i].IdPartido})'>Leer mas</a>
        </div>
     </div> 
    }
    </div>
</body>
</html>